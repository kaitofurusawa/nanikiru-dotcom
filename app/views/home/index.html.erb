<h2 class="section-title">最新の掲示板</h2>

<div class="home-board-container">
  <div class="board-grid">
    <% @boards.limit(5).each do |board| %>
      <div class="board-card">
        <%= image_tag(board.thumbnail_url == "sample.jpg" ? asset_path("sample.jpg") : board.thumbnail_url, 
                alt: board.title, 
                class: "board-thumbnail") %>
        <h3><%= link_to board.title, board_path(board) %></h3>
      </div>
    <% end %>
  </div>

  <div class="more-boards">
    <%= link_to "もっと見る", boards_path, class: "btn-more" %>
  </div>
</div>
