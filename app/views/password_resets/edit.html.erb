<h2 class="section-title"><%= t('password_resets.edit.title') %></h2>

<div class="password-reset-form-container">
  <%= form_with model: @user, url: password_reset_path(params[:id]), local: true do |f| %>
    <div class="form-group">
      <%= f.label :password, t('activerecord.attributes.user.password') %>
      <%= f.password_field :password, class: "form-input #{'input-error' if @user.errors[:password].any?}" %>
      <% if @user.errors[:password].any? %>
        <div class="error-message"><%= @user.errors[:password].first %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation') %>
      <%= f.password_field :password_confirmation, class: "form-input #{'input-error' if @user.errors[:password_confirmation].any?}" %>
      <% if @user.errors[:password_confirmation].any? %>
        <div class="error-message"><%= @user.errors[:password_confirmation].first %></div>
      <% end %>
    </div>

    <%= f.submit t('password_resets.edit.submit'), class: "reset-btn login-btn" %>
  <% end %>
</div>