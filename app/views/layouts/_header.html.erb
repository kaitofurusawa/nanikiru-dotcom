<header class="site-header">
  <div class="container header-container">
    <div class="title">
      <h1><%= link_to t('site.title'), root_path, class: "site-title-link" %></h1>
    </div>

    <% if logged_in? %>
      <div class="auth-buttons">
        <%= button_to t('buttons.post'), new_board_path, method: :get, class: "post-btn" %>

        <%= link_to user_path(current_user), class: "mypage-btn" do %>
          <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.profile_image, class: "user-icon" %>
          <% else %>
            <%= image_tag 'user_icon.png', class: "user-icon" %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="auth-buttons">
        <%= button_to t('buttons.signup'), new_user_path, method: :get, class: "signup-btn" %>
        <%= button_to t('buttons.login'), login_path, method: :get, class: "login-btn" %>
      </div>
    <% end %>
  </div>
</header>
