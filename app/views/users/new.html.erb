<h1 class="signup-title"><%= t('titles.signup') %></h1>

<div class="signup-form-container">
  <%= form_with model: @user, url: users_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, t('labels.name') %>
      <%= f.text_field :name, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :email, t('labels.email') %>
      <%= f.email_field :email, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, t('labels.password') %>
      <%= f.password_field :password, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, t('labels.password_confirmation') %>
      <%= f.password_field :password_confirmation, class: "form-input" %>
    </div>

    <%= f.submit t('buttons.register'), class: "signup-btn" %>
  <% end %>
</div>
