<h1 class="signup-title">新規登録</h1>

<div class="signup-form-container">
  <%= form_with model: @user, url: users_path, local: true do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-input" %>
    </div>

    <%= f.submit "登録する", class: "signup-btn" %>
  <% end %>
</div>
